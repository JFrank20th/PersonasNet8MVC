
@model AplicacionPersonas.Models.Usuario

<h2>Confirmar Eliminación</h2>

<p>¿Estás seguro de que deseas eliminar el siguiente usuario?</p>

<dl class="row">
    <dt class="col-sm-2">ID:</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Nombre:</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Pass:</dt>
    <dd class="col-sm-10">@Model.Pass</dd>

    <dt class="col-sm-2">Fecha de creación:</dt>
    <dd class="col-sm-10">@Model.FechaCreacion.ToShortDateString()</dd>

</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@model AplicacionPersonas.Models.Usuario

@{
    ViewData["Title"] = "Iniciar Sesión";
}



<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <h2>Iniciar Sesión</h2>
            <br />
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="Nombre" class="sr-only"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre de usuario" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Pass" class="sr-only"></label>
                    <div class="input-group">
                        <input asp-for="Pass" class="form-control" type="password" placeholder="Contraseña" id="txtPassword" />
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePasswordVisibility()" id="BotonPass">
                            Mostrar
                        </button>
                    </div>
                    <span asp-validation-for="Pass" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group text-center">
                    <input type="submit" value="Iniciar Sesión" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>



<script>
    function togglePasswordVisibility() {
        var passwordField = document.getElementById("txtPassword");
        var toggleButton = document.getElementById("BotonPass");

        if (passwordField.type === "password") {
            passwordField.type = "text";
            toggleButton.textContent = "Ocultar";
        } else {
            passwordField.type = "password";
            toggleButton.textContent = "Mostrar";
        }
    }
</script>
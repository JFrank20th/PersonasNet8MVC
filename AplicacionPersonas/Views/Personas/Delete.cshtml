
@model AplicacionPersonas.Models.Persona

<h2>Confirmar Eliminación</h2>

<p>¿Estás seguro de que deseas eliminar la siguiente persona?</p>

<dl class="row">
    <dt class="col-sm-2">ID:</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Nombre:</dt>
    <dd class="col-sm-10">@Model.Nombres</dd>

    <dt class="col-sm-2">Apellidos:</dt>
    <dd class="col-sm-10">@Model.Apellidos</dd>

    <dt class="col-sm-2">Tipo de Identificaión:</dt>
    <dd class="col-sm-10">@Model.TipoIdentificacion</dd>

    <dt class="col-sm-2">Número de Identificación:</dt>
    <dd class="col-sm-10">@Model.NumeroIdentificacion</dd>

    <dt class="col-sm-2">Email:</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    @* <dt class="col-sm-2">Fecha de creación:</dt>
    <dd class="col-sm-10">@Model.FechaCreacion.ToShortDateString()</dd> *@

</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
